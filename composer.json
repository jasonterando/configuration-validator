{
    "name": "configuration-validator",
    "description": "Utility to collect and validate configuration information",
    "license": "MIT",
    "keywords": [
        "configuration",
        "validation"
    ],
    "homepage": "http://gitlab.digitalroominc.com/",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "config-validator"
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "mustangostang/spyc": "^0.6.2"

    },
    "require-dev": {
        "phpunit/phpunit": "7.0.*"
    },
    "autoload": {
        "psr-4": {
            "ConfigurationValidator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ConfigurationValidator\\": "test/"
        }
    },
    "extra": [],
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit"
    }
}
